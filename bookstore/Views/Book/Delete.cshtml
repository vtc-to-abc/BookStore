@model Book;
@{
    ViewBag.Title = "Delete";
}

<div class = "row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1> Delete confirmation for @Model.book_title</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
               <div class="form-group">
                        <label asp-for="book_title" class="control-label"></label>
                        <input asp-for="book_title" class="form-control" readonly />
                        <span asp-validation-for="book_title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="stored_copies" class="control-label"></label>
                        <input asp-for="stored_copies" class="form-control" readonly/>
                        <span asp-validation-for="stored_copies" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="current_rent" class="control-label"></label>
                        <input asp-for="current_rent" class="form-control" readonly/>
                        <span asp-validation-for="current_rent" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="book_id"/>
                            <input type="submit" value="Confirm" class="btn btn-danger float-right"/>
                        </form>
                        <a class="btn btn-outline-secondary" asp-action="Index"> Show All</a>
                    </div>

            </div>
        </div>
    </div>
</div>


