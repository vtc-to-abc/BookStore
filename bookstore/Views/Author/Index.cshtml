@model IEnumerable<bookstore.Models.Author>;

@*   *@

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.author_id)</th>
                    <th>@Html.DisplayNameFor(model => model.pseudonym)</th>
                </tr>
            </thead>
                @foreach(var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.author_id)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem=> item.pseudonym)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-controller="Author" asp-action="Edit" asp-route-id="@item.author_id"><i class ="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-outline-info" asp-controller="Author" asp-action="Details" asp-route-id="@item.author_id"><i class ="bi bi-pencil-square"></i> Details</a>
                            <a class= "btn btn-danger text-white" asp-controller="Author" asp-action="Delete" asp-route-id="@item.author_id"><i class ="bi bi-pencil-square"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="text-white">
    <a asp-controller="Author" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i> Add New</a>

</div>