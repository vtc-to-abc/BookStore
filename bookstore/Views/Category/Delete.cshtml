@model Category;
@{
    ViewBag.Title = "Delete";
}

<div class = "row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1> Delete confirmation for @Model.category_name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
           
                    <div class="form-group">
                        <label asp-for="category_name" class="control-label"></label>
                        <input asp-for="category_name" class="form-control" readonly />
                        <span asp-validation-for="category_name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="category_id"/>
                            <input type="submit" value="Confirm" class="btn btn-danger float-right"/>
                        </form>
                        <a class="btn btn-outline-secondary" asp-action="Index"> Show All</a>
                    </div>

            </div>
        </div>
    </div>
</div>


