@model Renter;
@{
    ViewBag.Title = "Detail";
}

<div class = "row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1> Books By Renter: @Model.renter_name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
           
                    <div class="form-group">
                        <label asp-for="renter_name" class="control-label"></label>
                        <input asp-for="renter_name" class="form-control" readonly />
                        <span asp-validation-for="renter_name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="renter_phone" class="control-label"></label>
                        <input asp-for="renter_phone" class="form-control" readonly/>
                        <span asp-validation-for="renter_phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="renter_email" class="control-label"></label>
                        <input asp-for="renter_email" class="form-control" readonly/>
                        <span asp-validation-for="renter_email" class="text-danger"></span>
                    </div>

                  <div class="form-group">
                      <a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.renter_id">Edit</a>
                      <a class="btn btn-outline-secondary" asp-action="Index"> Show All</a>
                  </div>
            </div>
        </div>
    </div>
</div>


