@model Renter

@{
    ViewBag.Title = "Make Order";
}

<h2> Rent Order of @Model.renter_name</h2>

<form asp-action="MakeOrder">
   <div asp-validation-summary="ModelOnly" class="text-danger"></div>
       <div class="form-group">
           <label asp-for="@Model.renter_id" class="control-label"></label>
           <input asp-for="@Model.renter_id" name="id" id="id" class="form-control" readonly/>
           <span asp-validation-for="@Model.renter_id" class="text-danger"></span>
      </div>
      <div class="form-group">
            @Html.DropDownList("book_id", new SelectList(ViewBag.Books, "book_id", "book_title"))

      </div>

      <div class="form-group">
          <input type="submit" value="Rent" class="btn btn-outline-success float-right"/>
          <a class="btn btn-outline-secondary" asp-action="Index"> Cancel</a>
      </div>
</form>